
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

model User {
  id        String    @id
  username String @unique @default("Axel")
  email     String
  token     String    @db.Char(96)
  git_token String?
  projects  Project[]
}

model Project {
  id       String   @id @default(cuid())
  name     String
  provider Provider
  url      String   @db.Text
  private  Boolean
  users    User[]
}

enum Provider {
  GITHUB
  GITLAB
  BITBUCKET
  CUSTOM
}
