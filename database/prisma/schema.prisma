// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URI")
}

model User {
  id        String    @id
  email     String
  password  String    @db.Char(96)
  git_token String?
  projects  Project[]
}

model Project {
  id       String   @id @default(cuid())
  name     String
  provider Provider
  url      String   @db.Text
  private  Boolean
  User     User?    @relation(fields: [user_id], references: [id])
  user_id  String?
}

enum Provider {
  GITHUB
  GITLAB
  BITBUCKET
  CUSTOM
}
